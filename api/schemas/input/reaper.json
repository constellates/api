{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "EngineMetadata",
    "type": "object",
    "properties": {
        "group": {
            "properties": {
                "name": {"type": "string"}
            },
            "additionalProperties": false,
            "required": ["name"]
        },
        "project":      {
            "type": "object",
            "properties": {
                "public":       {"type": ["boolean", "null"]},
                "label":        {"type": "string"},
                "metadata":     {"type": ["object", "null"]},
                "files":        {
                    "type": ["array", "null"],
                    "items": {"$ref": "file.json"}
                }
            },
            "additionalProperties": false,
            "required": ["label"]
        },
        "session":      {
            "type": "object",
            "properties": {
                "public":       {"type": ["boolean", "null"]},
                "label":        {"type": "string"},
                "metadata":     {"type": ["object", "null"]},
                "operator":     {"type": ["string", "null"]},
                "uid":          {"type": "string"},
                "timestamp":    {"type": ["string", "null"]},
                "timezone":     {"type": ["string", "null"]},
                "files":        {
                    "type": ["array", "null"],
                    "items": {"$ref": "file.json"}
                }
            },
            "additionalProperties": false,
            "oneOf": [
                {"required": ["label"]},
                {"required": ["uid"]}
            ]
        },
        "acquisition":  {
            "type": "object",
            "properties": {
                "public":       {"type": ["boolean", "null"]},
                "label":        {"type": "string"},
                "metadata":     {"type": ["object", "null"]},
                "uid":          {"type": "string"},
                "instrument":   {"type": ["string", "null"]},
                "measurement":  {"type": ["string", "null"]},
                "timestamp":    {"type": ["string", "null"]},
                "timezone":     {"type": ["string", "null"]},
                "files":        {
                    "type": ["array", "null"],
                    "items": {"$ref": "file.json"}
                }
            },
            "additionalProperties": false,
            "oneOf": [
                {"required": ["label"]},
                {"required": ["uid"]}
            ]
        },
        "subject":      {"$ref": "subject.json"}
    },
    "required": ["acquisition", "group", "session", "project"],
    "additionalProperties": false
}